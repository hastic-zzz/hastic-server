  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Remote",
      "address": "127.0.0.1",
      "sourceMaps": true,
      "outFiles": [ "${workspaceFolder}/dist/**/*.js" ],
      "sourceMapPathOverrides": {
        "webpack:///./*": "c:\\Projects\\hastic-server\\server\\*"
      },
      "linux": {
        "sourceMapPathOverrides": {
          "webpack:///./~/*": "${workspaceRoot}/node_modules/*",
          "webpack:///./*": "${workspaceRoot}/*",
          "webpack:///*": "*"
        }
      },
      "port": 9229,
      "restart": true,
      "trace": true,
      "timeout": 100000
    }
  ]
}
