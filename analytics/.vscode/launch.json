  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach (Remote Debug)",
      "type": "python",
      "request": "attach",
      "port": 5679,
      "host": "localhost",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/var/www/analytics"
        }
      ]
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "windows": {
        "program": "${workspaceFolder}\\bin\\server"
      },
      "linux": {
        "program": "${workspaceFolder}/bin/server"
      }
    }
  ]
}
